<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @user %>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-light rounded") do |form| %>
        <div class="form-group">
          <%= form.label :username, class: "col-2 col-form-label text-dark" %>
          <div class="col-12">
            <%= form.text_field :username, class: "form-control shadow rounded", placeholder: "Enter a username" %>
          </div>
        </div>  
        <br>
        <div class="form-group">
          <%= form.label :email, class: "col-2 col-form-label text-dark" %>
          <div class="col-12"> 
            <%= form.text_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter your email address" %>
          </div>
        </div>
        <br>
        <div class="form-group">
          <%= form.label :password, class: "col-2 col-form-label text-dark" %>
          <div class="col-12"> 
            <%= form.password_field  :password, rows: 10, class: "form-control shadow rounded", placeholder: "Choose a password" %>
          </div>
        </div>
        <br>
        <div class="form-group">
          <%= form.submit class: "btn btn-outline-secondary btn-lg text-dark" %>
        </div>
      <% end %>
      <div class="mb-3">
        <%= link_to '[ Cancel and return to Articles Listing ]', articles_path, class: "text-dark" %>
      </div>
    </div>
  </div>
</div>