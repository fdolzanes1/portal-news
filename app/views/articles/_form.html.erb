<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors' %>
      <%= form_with(model: article, class: "shadow p-3 mb-3 bg-light rounded") do |form| %>
        <div class="form-group">
          <%= form.label :title, class: "col-2 col-form-label text-dark" %>
          <div class="col-12">
            <%= form.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
            <% article.errors.full_messages_for(:title).each do |message|%>
              <p class="text-danger"><%= message %></span>
            <% end %>
          </div>
        </div>  
        <br>
        <div class="form-group">
          <%= form.label :body, class: "col-2 col-form-label text-dark" %>
          <div class="col-12"> 
            <%= form.text_area :body, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
            <% article.errors.full_messages_for(:body).each do |message|%>
              <p class="text-danger"><%= message %></span>
            <% end %>
          </div>
        </div>
        <br>
        <div class="form-group">
          <%= form.submit class: "btn btn-outline-secondary btn-lg text-dark" %>
        </div>
      <% end %>
      <div class="mb-3">
        <%= link_to '[ Cancel and return to Articles Listing ]', articles_path, class: "text-dark" %>
      </div>
    </div>
  </div>
</div>